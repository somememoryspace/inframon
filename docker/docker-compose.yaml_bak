version: '3.8'

services:
  inframon:
    container_name: inframon
    image: inframon:latest
    cap_add:
      - NET_RAW
    environment:
      - CONFIG_PATH=/config/config.yaml
    volumes:
      - ../config:/config
      - inframon_logs:/inframon/logs
    network_mode: bridge

volumes:
  inframon_logs:
